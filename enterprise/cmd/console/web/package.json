{
  "name": "console-web",
  "version": "0.0.0-DEVELOPMENT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph.git",
    "directory": "enterprise/cmd/console/web"
  },
  "private": true,
  "scripts": {
    "test": "jest",
    "esbuild": "esbuild src/index.tsx --outdir=static/dist --platform=browser --sourcemap --format=esm --bundle --splitting --target=esnext --define:process.env.NODE_ENV=\"'production'\" --tree-shaking --metafile=esbuild.meta.json",
    "esbuild:serve": "esbuild src/index.tsx --serve=127.0.0.1:8076 --servedir=static --outdir=static/dist --sourcemap --format=esm --bundle --splitting --target=esnext --log-level=debug",
    "icons": "inkscape -w 128 -h 128 static/icon.svg -o static/icon.png && convert -size 128x128 static/icon.png static/favicon.ico"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:rxjs/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "arrow-body-style": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "@typescript-eslint/no-extra-semi": "off"
    },
    "ignorePatterns": "node_modules"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "proseWrap": "preserve",
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "{*.js?(on),*.y?(a)ml,.*.js?(on),.*.y?(a)ml,*.md,.prettierrc,.stylelintrc,.babelrc}",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": "{**/.vscode/*.json,**/tsconfig.json,**/tsconfig.*.json}",
        "options": {
          "parser": "json5",
          "quoteProps": "preserve",
          "singleQuote": false,
          "trailingComma": "all"
        }
      }
    ]
  }
}
